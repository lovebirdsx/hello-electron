{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch Renderer",
			"type": "shell",
			"command": "npx esbuild src/renderer.js --bundle --outfile=dist/bundle.js --format=esm --platform=browser --external:electron --watch",
			"isBackground": true,
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": "\\[watch\\] build finished",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": "^\\[watch\\] build started",
						"endsPattern": "^\\[watch\\] build finished"
					}
				}
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "never"
			}
		}
	]
}